body
    background-color: #f5f6fa
    font-size 14px;
    font-family: 'Roboto', sans-serif;

h2,h3,h4,h5,ul,body,html
    padding 0px
    margin 0px

.wrapper
    min-height 100vh
    overflow hidden
    .col1
        float left
        position relative
        z-index 999
        width 17%
    .col2
        float left
        width 83%

.sidebar
    background-color: #fff
    min-height 100vh
    .section-top
        background-color #fabff
        box-shadow 0 0.5rem 1rem rgba(0,0,0, 0.15)
    .logo
        display block
        margin 0px auto
        padding-top 24px
        width 70%
    .user
        color #075B89 !important
        padding 16px
    a
        color #9FA5A8
        font-size 1.2em

.main
    display block
    margin-top 8px
    ul
        li
            margin-bottom 4px
            a
                color #8998AC !important
                display block
                font-size 1.1em
                padding 12px 12px
                i
                    margin-right 10px
                &:hover
                    background-color #B8BCBC
                    box-shadow 0 0.5rem 1rem rgba(0,0,0, 0.15)
                    color #010003 !important
                    text-decoration none
            a.active
                background-color #B8BCBC
                box-shadow 0 0.5rem 1rem rgba(0,0,0, 0.15)
                color #010003 !important
                text-decoration none

.navbar
    background-color #fff
    a
        color #8998AC !important
.page
    padding-top 16px
    padding-bottom 16px
    .breadcrumb
        background-color #fff
        box-shadow 0 0.5rem 1rem rgba(0,0,0, 0.10) !important
        .breadcrumb-item
            a
                &:hover
                    text-decoration none
    .panel
        background-color #fff
        border-radius 6px
        border-bottom 2px solid #8998AC
        width 100%
        .header
            border-bottom 1px solid #e8e8e8
            h2.title
                display inline-block
                color #19213d
                font-size 1.1em
                padding 12px 16px
        .inside
            padding 16px
            .nav
                .nav-link
                    border 1px solid #8998AC
                    margin-right 8px
                    &:hover
                        background-color #8998AC
                        color #fff

.opts
    a
        border-radius 4px
        border 1px solid #dedede
        display inline-block
        padding 8px 12px
.mtop16
    margin-top 16px

.product_gallery
    overflow hidden
    .btn-submit
        display block
        margin-right 1%
        width 100%
        a
            border 1px dashed #666
            color: #333
            border-radius 4px
            display block
            font-size 1.5em
            text-align center
            padding 12px
            width 100%
            &:hover
                background-color #2caaff
                color: #fff
    .tumbs
        overflow hidden
        .tumb
            float left
            margin-top 16px
            position relative
            width 48%
            a
                background-color rgba(0,0,0,0.5)
                display inline-block
                color #fff
                padding 6px 10px
                border-radius 50%
                position absolute
                bottom 8px
                right 8px
            img
                border-radius 4px
                width 100%
            &:nth-child(odd)
                margin-right 4%

.page_user
    .mini_profile
        .avatar
            display block
            margin 0 auto
            border-radius 50%
            width 150px
        .info
            background-color #fff
            span
                display block
                font-size 1.1em
                width 100%
            span.title
                font-weight bold
                margin-top 16px
                &:hover
                    color: #2caaff
                    .fa-id-badge
                    .fa-envelope
                    .fa-calendar-alt
                    .fa-user-tag
                    .fa-user-shield
                        color: #2caaff
            span.text
                .fa-check-circle
                    color #5FAE57
        .btn
            margin-top 16px
            width 100%


.dropdown-menu
    a
        &:hover
            color #2caaff

